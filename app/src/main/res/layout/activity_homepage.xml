<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:background="#F3F1F1"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context=".Homepage">


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu"
        android:visibility="visible"
        android:layout_width="300dp"
        android:layout_gravity="start"
        android:layout_height="match_parent">

    </com.google.android.material.navigation.NavigationView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/top_cl"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#F3F1F1"
            android:layout_marginTop="14dp"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints,RtlSymmetry">

            <com.google.android.material.card.MaterialCardView
                android:layout_centerInParent="true"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:elevation="40dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="8dp"
                tools:ignore="MissingConstraints">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="wrap_content"
                        app:contentInsetLeft="0dp"
                        app:contentInsetStart="0dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/mainmenu"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@drawable/ic_menu" />
                    </androidx.appcompat.widget.Toolbar>
                    <LinearLayout
                        android:visibility="visible"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <ImageView
                            android:background="@drawable/ic_eusalogoicon"
                            android:layout_width="36dp"
                            android:layout_height="36dp">
                        </ImageView>
                        <TextView
                            android:text="EUSA"
                            android:textColor="@color/BlueColor"
                            android:textSize="28sp"
                            android:textStyle="normal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                        </TextView>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/homepage_profile"
                        android:background="@drawable/ic_baseline_account_circle"
                        android:layout_centerVertical="true"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="8dp"
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginEnd="8dp">

                    </ImageView>

                </RelativeLayout>

            </com.google.android.material.card.MaterialCardView>


        </RelativeLayout>
        <ScrollView
            android:layout_marginTop="76dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/lineralayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:orientation="vertical"
                android:background="#F3F1F1">
            <LinearLayout
                android:id="@+id/card2"
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                tools:ignore="MissingConstraints">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:weightSum="9"
                    android:orientation="horizontal"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_weight="3"
                        android:gravity="center"
                        android:layout_width="0dp"
                        android:layout_height="match_parent">
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/book_plumber"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:elevation="40dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="8dp"
                            tools:ignore="MissingConstraints">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:weightSum="10"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_marginTop="8dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="5"
                                    app:srcCompat="@drawable/plumbericon"
                                    >
                                </ImageView>
                                <TextView
                                    android:text="Plumber"
                                    android:textSize="15sp"
                                    android:textStyle="normal"
                                    android:gravity="center"
                                    android:textColor="#000"
                                    android:layout_width="match_parent"
                                    android:layout_weight="3"
                                    android:layout_height="0dp">

                                </TextView>
                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_marginLeft="16dp"
                        android:gravity="center"
                        android:layout_marginRight="16dp"
                        android:layout_height="match_parent">
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/book_electrician"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:elevation="40dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="8dp"
                            tools:ignore="MissingConstraints">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:weightSum="10"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_marginTop="8dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="5"
                                    app:srcCompat="@drawable/electricianicon"
                                    >
                                </ImageView>
                                <TextView
                                    android:text="Electrician"
                                    android:textSize="15sp"
                                    android:textStyle="normal"
                                    android:gravity="center"
                                    android:textColor="#000"
                                    android:layout_width="match_parent"
                                    android:layout_weight="3"
                                    android:layout_height="0dp">

                                </TextView>
                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:gravity="center"
                        android:layout_height="match_parent">
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/book_carmechanic"
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:elevation="40dp"
                            app:cardBackgroundColor="@color/white"
                            app:cardCornerRadius="8dp"
                            tools:ignore="MissingConstraints">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:weightSum="10"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:layout_height="match_parent">
                                <ImageView
                                    android:layout_marginTop="8dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="5"
                                    app:srcCompat="@drawable/mechanicicon"
                                    >
                                </ImageView>
                                <TextView
                                    android:text="Car Mechanic"
                                    android:textSize="15sp"
                                    android:textStyle="normal"
                                    android:gravity="center"
                                    android:textColor="#000"
                                    android:layout_width="match_parent"
                                    android:layout_weight="3"
                                    android:layout_height="0dp">

                                </TextView>
                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
                <LinearLayout
                    android:id="@+id/card3"
                    android:layout_width="match_parent"
                    android:layout_height="104dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    tools:ignore="MissingConstraints">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:weightSum="9"
                        android:orientation="horizontal"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_weight="3"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/book_carpenter"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:elevation="40dp"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="8dp"
                                tools:ignore="MissingConstraints">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:weightSum="10"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:layout_marginTop="8dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="5"
                                        app:srcCompat="@drawable/carpentericon"
                                        >
                                    </ImageView>
                                    <TextView
                                        android:text="Carpenter"
                                        android:textSize="15sp"
                                        android:textStyle="normal"
                                        android:gravity="center"
                                        android:textColor="#000"
                                        android:layout_width="match_parent"
                                        android:layout_weight="3"
                                        android:layout_height="0dp">

                                    </TextView>
                                </LinearLayout>

                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="3"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:layout_marginLeft="16dp"
                            android:layout_marginRight="16dp"
                            android:layout_height="match_parent">
                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/book_cleaner"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:elevation="40dp"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="8dp"
                                tools:ignore="MissingConstraints">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:weightSum="10"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:layout_marginTop="8dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="5"
                                        app:srcCompat="@drawable/cleanericon"
                                        >
                                    </ImageView>
                                    <TextView
                                        android:text="Cleaner"
                                        android:textSize="15sp"
                                        android:textStyle="normal"
                                        android:gravity="center"
                                        android:textColor="#000"
                                        android:layout_width="match_parent"
                                        android:layout_weight="3"
                                        android:layout_height="0dp">

                                    </TextView>
                                </LinearLayout>

                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="3"
                            android:layout_width="0dp"
                            android:gravity="center"
                            android:layout_height="match_parent">
                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/book_mechanic"
                                android:layout_width="match_parent"
                                android:layout_height="100dp"
                                android:elevation="40dp"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="8dp"
                                tools:ignore="MissingConstraints">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:weightSum="10"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:layout_height="match_parent">
                                    <ImageView
                                        android:layout_marginTop="8dp"
                                        android:layout_width="match_parent"
                                        android:layout_height="0dp"
                                        android:layout_weight="5"
                                        app:srcCompat="@drawable/mechanicicon"
                                        >
                                    </ImageView>
                                    <TextView
                                        android:text="Mechanic"
                                        android:textSize="15sp"
                                        android:textStyle="normal"
                                        android:gravity="center"
                                        android:textColor="#000"
                                        android:layout_width="match_parent"
                                        android:layout_weight="3"
                                        android:layout_height="0dp">

                                    </TextView>
                                </LinearLayout>

                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            <LinearLayout
                android:id="@+id/book_service_provider"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_marginBottom="4dp"
                    android:elevation="40dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp"
                    tools:ignore="MissingConstraints">
                    <LinearLayout
                        android:padding="16dp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="Book a Service Provider"
                                android:textColor="@color/grey"
                                android:textSize="14sp"
                                android:textStyle="normal"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/select_location_ll"
                            android:layout_marginTop="16dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:orientation="horizontal"
                                android:layout_height="wrap_content">
                                <ImageView
                                    android:id="@+id/outline_circle"
                                    app:srcCompat="@drawable/ic_circle_outline"
                                    android:layout_width="16dp"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentStart="true"
                                    android:layout_height="16dp"
                                    android:layout_alignParentLeft="true">
                                </ImageView>
                                <TextView
                                    android:text="Search service providers..."
                                    android:textColor="@color/grey"
                                    android:layout_marginLeft="32dp"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentStart="true"
                                    android:textSize="14sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true">
                                </TextView>
                                <ImageView
                                    app:srcCompat="@drawable/ic_search"
                                    android:layout_alignParentEnd="true"
                                    android:layout_centerVertical="true"
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:layout_alignParentRight="true">
                                </ImageView>
                            </RelativeLayout>

                        </LinearLayout>
                        <RelativeLayout
                            android:id="@+id/location_book_button"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/rounded_rectangle"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:text="Search"
                                android:textSize="18sp"
                                android:layout_centerInParent="true"
                                android:textColor="@color/BlueColor"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                            </TextView>

                        </RelativeLayout>

                    </LinearLayout>


                </com.google.android.material.card.MaterialCardView>



            </LinearLayout>
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardrecentjob"
                    android:layout_width="match_parent"
                    android:layout_height="130dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginRight="16dp"
                    android:elevation="40dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp"
                    tools:ignore="MissingConstraints">

                    <LinearLayout
                        android:id="@+id/recentJob_ll"
                        android:padding="16dp"
                        android:weightSum="7"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_weight="2.5"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">
                            <TextView
                                android:text="Recent Booking"
                                android:textColor="@color/grey"
                                android:textSize="14sp"
                                android:textStyle="normal"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent">
                            </TextView>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_weight="5.5"
                            android:layout_width="match_parent"
                            android:layout_height="0dp">
                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/recentspaccountimage"
                                    app:srcCompat="@drawable/ic_baseline_account_circle"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp">
                                </ImageView>
                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/recentspimage"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:visibility="gone"
                                    android:src="@drawable/profile1"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent">
                                </de.hdodenhof.circleimageview.CircleImageView>

                                <TextView
                                    android:id="@+id/recentspname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Akash Ali"
                                    android:textColor="#000"
                                    android:textSize="18sp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginTop="8dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintStart_toEndOf="@+id/recentspaccountimage"
                                    tools:layout_editor_absoluteX="16dp">
                                </TextView>

                                <TextView
                                    android:id="@+id/recentsprating"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginTop="4dp"
                                    android:text="4.0"
                                    android:textColor="@color/grey"
                                    android:textSize="12sp"
                                    app:layout_constraintStart_toEndOf="@+id/recentspaccountimage"
                                    app:layout_constraintTop_toBottomOf="@+id/recentspname" />

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="16dp"
                                    android:layout_marginTop="4dp"
                                    app:layout_constraintStart_toEndOf="@+id/recentsprating"
                                    app:layout_constraintTop_toBottomOf="@+id/recentspname"
                                    app:srcCompat="@drawable/ic_baseline_star_yellow">

                                </ImageView>
                                <TextView
                                    android:id="@+id/recentservicetime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="5:50pm"
                                    android:textColor="@color/grey"
                                    android:textSize="18sp"
                                    android:layout_marginTop="8dp"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent">
                                </TextView>

                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:visibility="visible"
                    android:id="@+id/cardongoingservice"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="24dp"
                    android:layout_marginRight="16dp"
                    android:elevation="40dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="8dp"
                    tools:ignore="MissingConstraints">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:weightSum="10">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Ongoing Service"
                                android:textColor="@color/grey"
                                android:textSize="14sp"
                                android:textStyle="normal" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="5">

                            <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <ImageView
                                    android:id="@+id/spaccountimage"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    app:srcCompat="@drawable/ic_baseline_account_circle"></ImageView>

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/spimage"
                                    android:layout_width="60dp"
                                    android:layout_height="60dp"
                                    android:src="@drawable/profile1"
                                    android:visibility="gone"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"></de.hdodenhof.circleimageview.CircleImageView>

                                <TextView
                                    android:id="@+id/spname"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginTop="8dp"
                                    android:text="Akash Ali"
                                    android:textColor="#000"
                                    android:textSize="18sp"
                                    app:layout_constraintStart_toEndOf="@+id/spaccountimage"
                                    app:layout_constraintTop_toTopOf="parent"
                                    tools:layout_editor_absoluteX="16dp"></TextView>

                                <TextView
                                    android:id="@+id/sprating"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginTop="4dp"
                                    android:text="4.0"
                                    android:textColor="@color/grey"
                                    android:textSize="12sp"
                                    app:layout_constraintStart_toEndOf="@+id/spaccountimage"
                                    app:layout_constraintTop_toBottomOf="@+id/spname" />

                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="16dp"
                                    android:layout_marginTop="4dp"
                                    app:layout_constraintStart_toEndOf="@+id/sprating"
                                    app:layout_constraintTop_toBottomOf="@+id/spname"
                                    app:srcCompat="@drawable/ic_baseline_star_yellow">

                                </ImageView>

                                <TextView
                                    android:id="@+id/servicetime"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="8dp"
                                    android:text="5:50pm"
                                    android:textColor="@color/grey"
                                    android:textSize="18sp"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"></TextView>

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:layout_marginBottom="8dp"
                                    android:background="@color/grey"
                                    app:layout_constraintBottom_toBottomOf="parent">

                                </ImageView>


                            </androidx.constraintlayout.widget.ConstraintLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="3"
                            android:orientation="horizontal"
                            android:weightSum="9">

                            <LinearLayout
                                android:id="@+id/ongoingservicecall"
