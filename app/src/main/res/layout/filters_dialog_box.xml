<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="32dp"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <TextView
        android:text="Search Filters"
        android:gravity="center"
        android:textSize="26sp"
        android:textColor="@color/BlueColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </TextView>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/distance_edittext"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Distance"
        android:layout_marginTop="16dp"
        app:boxStrokeColor="#03A9F4"
        app:counterEnabled="true"
        app:hintTextColor="#03A9F4"
        app:suffixText="Kilometer"
        app:suffixTextColor="@color/BlueColor"
        android:textColorHint="#BAB9B9"
        android:background="@color/white"
        app:boxBackgroundColor="@color/white">

        <AutoCompleteTextView
            android:id="@+id/getdistancedropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textColor="#000"
            android:inputType="none"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/rating_edittext"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Rating"
        android:layout_marginTop="8dp"
        app:boxStrokeColor="#03A9F4"
        app:counterEnabled="true"
        app:hintTextColor="#03A9F4"
        app:suffixText="Star"
        app:suffixTextColor="@color/BlueColor"
        android:textColorHint="#BAB9B9"
        android:background="@color/white"
        app:boxBackgroundColor="@color/white">

        <AutoCompleteTextView
            android:id="@+id/getratingdropdown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:textColor="#000"
            android:inputType="none"/>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:weightSum="10"
        android:layout_height="wrap_content">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/filter_cancel"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:text="Cancel"
            android:layout_weight="5"
            android:layout_marginRight="8dp"
            android:textColor="@color/white"
            android:layout_marginEnd="8dp">

        </com.google.android.material.button.MaterialButton>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/filter_apply"
            android:layout_width="match_parent"
            android:layout_height="62dp"
            android:text="Apply"
            android:layout_weight="5"
            android:layout_marginLeft="8dp"
            android:textColor="@color/white"
            android:layout_marginStart="8dp">

        </com.google.android.material.button.MaterialButton>

    </LinearLayout>

</LinearLayout>